<Window x:Class="WPFUnityPlayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUnityPlayer"
        
        xmlns:prism="http://prismlibrary.com/"
        xmlns:interactivity="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mvvmlight="http://www.galasoft.ch/mvvmlight"
        prism:ViewModelLocator.AutoWireViewModel="True"
        
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800">
    <interactivity:Interaction.Triggers>
        <interactivity:EventTrigger EventName="Loaded">
            <mvvmlight:EventToCommand Command="{Binding MainWindowLoadedCommand}"
                                      CommandParameter="{x:Reference Name=UnityWindowParent}"/>
        </interactivity:EventTrigger>
    </interactivity:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="UnityWindowParent" 
                Grid.Column="0">
            
        </Border>
        <Button Width="100" Height="20"
                Grid.Column="1"/>
    </Grid>
</Window>
